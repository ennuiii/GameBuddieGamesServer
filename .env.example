# Server Configuration
PORT=3001
NODE_ENV=development

# GameBuddies Platform
GAMEBUDDIES_CENTRAL_URL=https://gamebuddies.io

# API Keys for External Game Status API (one per game)
# Leave blank for local testing without GameBuddies integration
BINGO_API_KEY=your_bingo_api_key_here
CLUE_API_KEY=your_clue_api_key_here
DDF_API_KEY=your_ddf_api_key_here
SUSD_API_KEY=your_susd_api_key_here
QUIZ_API_KEY=your_quiz_api_key_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://gamebuddies.io

# Client URLs (for reference)
BINGO_CLIENT_URL=http://localhost:5173
CLUE_CLIENT_URL=http://localhost:5173
DDF_CLIENT_URL=http://localhost:5173
SUSD_CLIENT_URL=http://localhost:5173
QUIZ_CLIENT_URL=http://localhost:3000

# ============================================================================
# Optional: Supabase Integration (for persistent game & question storage)
# Leave blank to use in-memory storage and JSON file-based questions
# ============================================================================
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
